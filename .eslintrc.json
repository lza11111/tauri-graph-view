{
    "extends": [
        "eslint:recommended",
        "next",
        "prettier",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "react/display-name": [
            "off"
        ],
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "@next/next/no-page-custom-font": [
            "off"
        ],
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "@typescript-eslint/no-var-requires": 0,
        "space-infix-ops": [
            "error",
            {
                "int32Hint": false
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "rest-spread-spacing": [
            "error"
        ],
        "no-useless-escape": "warn",
        "no-unsafe-finally": "warn"
    }
}